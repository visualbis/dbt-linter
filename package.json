{
	"name": "dbt",
	"version": "0.0.1",
	"publisher": "VisualBI",
	"author": {
		"name": "VisualBI"
	},
	"main": "./extension",
	"license": "MIT",
	"description": "Jinja and SQL support for Visual Studio Code",
	"displayName": "DBT",
	"categories": [
		"Programming Languages",
		"Snippets",
		"Linters"
	],
	"engines": {
		"vscode": "^1.0.0"
	},
	"activationEvents": [
		"onLanguage:sql"
	],
	"contributes": {
		"languages": [
			{
				"id": "dbt",
				"aliases": [
					"DBT"
				],
				"extensions": [
					".sql"
				],
				"configuration": "./dbt.configuration.json"
			}
		],
		"grammars": [
			{
				"language": "dbt",
				"scopeName": "source.jinja",
				"path": "./syntaxes/jinja.json"
			}
		],
		"snippets": [
			{
				"language": "dbt",
				"path": "./snippets/dbt.json"
			}
		],
		"commands": [
			{
				"command": "formatsql",
				"title": "Format SQL"
			}
		],
		"keybindings": [
			{
				"command": "formatsql",
				"key": "ctrl+s",
				"when": "editorTextFocus && !editorReadonly && editorLangId == 'dbt'"
			}
		]
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"vscode": "^1.1.6"
	},
	"dependencies": {
		"vkbeautify": "0.99.1"
	}
}
